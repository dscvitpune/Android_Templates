<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/bookingCardView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="4dp"
        app:cardBackgroundColor="#D5B195"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5.5">

            <TextView
                android:id="@+id/tvBookingDate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.5"
                android:fontFamily="@font/bubbler_one"
                android:text="dd/mm/yy"
                android:textSize="24sp"
                android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                android:drawablePadding="5dp"/>

            <TextView
                android:id="@+id/tvBookingTime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.5"
                android:fontFamily="@font/bubbler_one"
                android:text="10:00 AM"
                android:textSize="24sp"
                android:drawableLeft="@drawable/ic_baseline_access_time_24"
                android:drawablePadding="5dp"/>

            <TextView
                android:id="@+id/tvBookingName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.25"
                android:fontFamily="@font/bubbler_one"
                android:text="XYZ"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_baseline_account_circle_24"
                android:drawablePadding="5dp"/>

            <TextView
                android:id="@+id/tvBookingAddress"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.25"
                android:fontFamily="@font/bubbler_one"
                android:text="abc rd. XYZ street"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:drawablePadding="5dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>